            <plugin>
                <groupId>io.thorntail</groupId>
                <artifactId>thorntail-maven-plugin</artifactId>
                <version>${version.thorntail}</version>        
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <properties>
                        <swarm.context.path>payslip-fulfilment</swarm.context.path>
                        <swarm.port.offset>1</swarm.port.offset>
                    </properties>
                </configuration>
            </plugin>  
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.26.0</version>                
                <configuration>
                    <images>
                        <image>
                            <name>${docker.image}</name>
                            <build>
                                <from>java:8</from>
                                <maintainer>mayemij@gmail.com</maintainer>
                                <ports>
                                    <port>8081</port>
                                </ports>
                                <assembly>
                                    <inline>

                                        <files>
                                            <file>
                                                <source>${project.build.directory}/${project.artifactId}-thorntail.jar</source>
                                            </file>
                                            <file>
                                                <source>sapjco/sapjco3.jar</source>
                                                <outputDirectory>/lib</outputDirectory>
                                            </file>
                                            <file>
                                                <source>sapjco/libsapjco3.so</source>
                                               <outputDirectory>/lib</outputDirectory>
                                            </file>                                            
                                        </files>
                                    </inline>
                                    <fileSets>
                                        <fileSet>
                                          <directory>sapjco</directory>
                                          <outputDirectory>/usr/lib/jvm/java-8-openjdk-amd64/jre/lib/ext</outputDirectory>
                                          <filtered>false</filtered>
                                          <includes>
                                                <include>sapjco3.jar</include>
                                                <include>libsapjco3.so</include>
                                          </includes>
                                          <fileMode>755</fileMode>
                                        </fileSet>
                                  </fileSets>
                                </assembly>
<!--                                <assembly>
