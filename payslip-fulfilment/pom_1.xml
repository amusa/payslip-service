                                </assembly>-->
                                
                                <cmd>java -Djava.net.preferIPv4Stack=true -cp ".:/maven/lib:/maven/lib/sapjco3.jar"  -jar /maven/${project.artifactId}-thorntail.jar </cmd>
                                
                            </build>
